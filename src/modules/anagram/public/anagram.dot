<link rel="stylesheet" href="css/anagram.css" type="text/css">

<div class="ia__anagram__body">
{{? it.data.nblet.length == 0 }}
	<span>{{= _('No anagram found', 'ia-anagram') }}</span>
{{??}}
	{{? it.data.thumbnail != '' }}
		<div class="ia__content__image__info">
		  <img class="ia__image" src="{{= it.data.thumbnail }}"></img>
		  <div class="ia__gradient__image"></div>
		  <div class="ia__title__image">{{= _('Your word', 'ia-anagram') }}: <b>{{= it.data.seek }}</b></div>
		  {{? it.data.maxletter > 1 }}
		  	<div class="ia__subtitle__image">{{= it.data.maxletter }} {{= _('letters', 'ia-anagram') }}</div>
		  {{??}}
		  	<div class="ia__subtitle__image">{{= it.data.maxletter }} {{= _('letter', 'ia-anagram') }}</div>
		  {{?}}
		</div>
	{{?}}
	<div class="ia__content__result__info">
		<div class="ia__content__result__infoscroll">
			<div class="ia__brief__content">
				<div class="ia__brief__result" style="font-weight:bold">ANAGRAM: <style="font-weight:normal">{{= it.data.sentence }}</style></div>
			</div>
			{{~it.data.categories:categorie:i }}
				{{? i % 2 == 0 }}
					<div class="ia__anagram__result" style="background: white">
				{{??}}
					<div class="ia__anagram__result" style="background: #f8f9fa">
				{{?}}
				{{? it.data.nblet[i] == it.data.maxletter }}
					<div class="ia__nbletter__result">{{= _('Words with', 'ia-anagram') }} <b style="color:black">all letters</b>:</div>
				{{??}}
					{{? it.data.nblet[i] > 1 }}
						<div class="ia__nbletter__result">{{= _('Words with', 'ia-anagram') }} <b style="color:black">{{= it.data.nblet[i] }} {{= _('letters', 'ia-anagram') }}</b>:</div>
					{{??}}
						<div class="ia__nbletter__result">{{= _('Words with', 'ia-anagram') }} <b style="color:black">{{= it.data.nblet[i] }} {{= _('letter', 'ia-anagram') }}</b>:</div>
					{{?}}
				{{?}}
				<div class="ia__anagram__content__text">
					{{~categorie:sameAnagram:j}}
						<div class="ia__anagram__text">
						{{~sameAnagram[0]:anagram:k}}
							{{? sameAnagram[0].length - k > 1}}
								<span>{{= anagram }}, </span>
							{{??}}
								<span>{{= anagram }}</span>
							{{?}}
						{{~}}
						<br>
						{{? sameAnagram[1] != ''}}
							<a class="space" href="?q=anagram+{{= sameAnagram[1] }}">{{= _('rest', 'ia-anagram') }} : {{= sameAnagram[1] }}</a>
						{{?}}
						</div>
					{{~}}
				</div>
				</div> <!-- div ia__anagram__result -->
			{{~}}
		</div>
		<span class="icon icon-nav-scroll-icon-large" style="font-size: 40px;position: relative; bottom: 27px; left: 50%"></span>
	</div>
{{?}}
</div>

