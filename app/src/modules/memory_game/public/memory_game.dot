<link rel="stylesheet" href="css/memory_game.css" type="text/css">
<div class="ia__memory_game">
  <div class="ia__memory_game__board">
    {{ for(emojiType of it.data.emojis) { }}
      <div class="ia__memory_game__flip-card {{= emojiType}}" data-emoji-type={{= emojiType}}>
        <div class="ia__memory_game__flip-card-inner">
          <div class="ia__memory_game__flip-card-front">
            <img src="{{= it.images_path }}/memory_game/qwant-logo.svg" />
          </div>
          
          <img class="ia__memory_game__flip-card-back" src="{{= it.images_path }}/memory_game/emojis/{{= emojiType }}.svg" alt="{{= emojiType }}" />
        
        </div>
      </div>

    {{ } }}
  </div>
  <div class="ia__memory_game__instructions">
		<span>{{= _('Click 2 similar cards, be smart !', 'memory-game') }}</span>
    <div id="reset-button" class="ia__memory_game__reset-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-refresh-ccw"><polyline points="1 4 1 10 7 10"></polyline><polyline points="23 20 23 14 17 14"></polyline><path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"></path></svg>
      <span>{{= _('New game', 'memory-game') }}<span>
    </div>
	</div>
</div>